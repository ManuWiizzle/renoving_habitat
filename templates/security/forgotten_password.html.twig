{% extends 'layout_admin.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container">

    <div class="h1_title_container mx-auto mt-100px mb-5">
        <h1 class="text-center">Mot de passe oublié</h1>
    </div>
    <div class="row justify-content-center">
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    <div class="bloc-beige col-8 offset-2">
        <div class="form-row justify-content-center">
            {% if app.session.flashbag.peek('notice') %}
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% elseif app.session.flashbag.peek('wrong-notice') %}
                    {% for message in app.flashes('wrong-notice') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
            {% endfor %}
            {% else %}
                <div class="col-8">
                    {{ form_start(form) }}
                    <div class="mt-3 mb-3 text-center w-50 mx-auto">
                        {{ form_widget(form.username, {'attr': {'class' : 'form-control'} }) }}
                    </div>
                    <div class="form-row justify-content-center">
                        <button type="submit" class="create_good_deal_button mt-3"><p>Valider</p></button>
                    </div>
                    {{ form_end(form) }}
                    <div class="form-row justify-content-center mt-2">
                        <a class="txtItalic" href="{{ path('app_login') }}">Revenir sur l'interface de connexion</a>
                    </div>
                </div>
            {% endif %}
    </div>
    </div>
{% endblock %}