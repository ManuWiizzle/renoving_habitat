{% extends 'layout_admin.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="h1_title_container mx-auto mt-100px mb-5">
            <h1 class="text-center">Modifier votre mot de passe</h1>
        </div>
        <div class="bloc-beige col-8 offset-2 justify-content-center">
            <div class="row justify-content-center">
                <div class="col-8">
        {{ form_start(form) }}
        {{ form_row(form.username, {'attr': {'class': 'form-control mt-3'} }) }}
        {{ form_widget(form.password.first, {'attr': {'class': 'form-control mt-3'} }) }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control mt-3'} }) }}
            </div>
            </div>
        <div class="row justify-content-center">
            <button class="sendButtonGreen mt-4">Valider</button>
            {{ form_end(form) }}
        </div>
        </div>
    </div>
{% endblock %}
