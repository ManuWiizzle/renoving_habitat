{% extends "base.html.twig" %}
{% block body %}
    <!-- Image Map Generated by http://www.image-map.net/ -->
    <div class="container-fluid">
        <div id="maped_house_container">
            <img usemap="#image-map" class="maped_house_image mx-auto map" id="house_image" src="assets/homepage_image/house_homepage.jpg">
            <map name="image-map">
                <area class="maped_area tooltip" title="Couverture" categ="couverture" target="" alt="Couverture" title="Couverture" href="" coords="515,309,70" shape="circle">
                <area class="maped_area tooltip" title="Terrassement" categ="terrassement" target="" alt="Terrassement" title="Terrassement" href="" coords="895,1136,95" shape="circle">
                <area class="maped_area tooltip" title="Isolation" categ="isolation" target="" alt="Isolation" title="Isolation" href="" coords="1168,257,94" shape="circle">
                <area class="maped_area tooltip" title="Intérieur" categ="interieur" target="" alt="Intérieur" title="Intérieur" href="" coords="1220,911,83" shape="circle">
                <area class="maped_area tooltip" title="Ravalement" categ="ravalement" target="" alt="Ravalement" title="Ravalement" href="" coords="160,816,111" shape="circle">
            </map>
        </div>
    </div>
    </div>
    <div class="container-fluid"
    <div class="row">
        <div class="col-6">
            <h2>Nos bons plans</h2>
            {% for good_deal in good_deals %}
                <h3>{{ good_deal.title }}</h3>
                <p>{{ good_deal.description }}</p>
            {% endfor %}
            <p>Appeller nous au 06 11 22 33 44 pour organiser un RDV avec l'un de nos conseillers.</p>
        </div>
    </div>
    </div>
    <section>
        {% include 'home/_good_deal_block.html.twig' %}
    </section>
{% endblock body %}
{% block footer %}
    {% include 'footer/index.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('tooltipster') }}
    {{ encore_entry_script_tags('maph') }}
    {{ encore_entry_script_tags('mapresizer') }}
    {{ encore_entry_script_tags('mappedImage') }}
{% endblock %}


