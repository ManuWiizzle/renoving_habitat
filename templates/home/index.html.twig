        <section class="bon-plans p-5">
            <div class="container-fluid">
                <div class="gooddeal">
                    <h2 class="py-3 display-4">Bon plan du moment</h2>
                </div>

                        <div class="box">
                    <div class="card-body postit flex-column">
                        <img src="{{ asset('build/images/main/pin.png') }}" class="mb-3" width="35em" height="50em" alt="pin">
