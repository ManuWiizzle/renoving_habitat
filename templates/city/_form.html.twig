<div class="container mx-auto text-center form_edit_container">
{{ form_start(form, { 'attr': {'id': 'edit_form_city'} }) }}
    <div class="form_edit_title_container my-3">
        <div class="form_edit_label">
        {{ form_label(form.name, 'Nom de la ville') }}
        </div>
        <div>
        {{ form_widget(form.name, { 'attr': {'class': 'name_input_city form-control mx-auto'} }) }}
        </div>
    </div>
    <div class="form_edit_title_container my-3">
        <div class="form_edit_label">
            {{ form_label(form.longitude, 'Longitude') }}
        </div>
        <div>
            {{ form_widget(form.longitude, { 'attr': {'class': 'longitude_input_city form-control mx-auto', 'rows': '2'} }) }}
        </div>
    </div>
    <div class="form_edit_title_container my-3">
        <div class="form_edit_label">
        {{ form_label(form.latitude, 'Latitude') }}
        </div>
        <div>
        {{ form_widget(form.latitude, { 'attr': {'class': 'latitude_input_city form-control mx-auto'} }) }}
        </div>
    </div>
    {{ form_end(form) }}
    <button type="submit" form="edit_form_city" class="sendButtonGreen">{{ button_label|default('Enregistrer') }}</button>
</div>