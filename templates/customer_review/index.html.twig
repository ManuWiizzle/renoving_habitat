{% extends 'base.html.twig' %}

{% block title %}CustomerReview index{% endblock %}

{% block body %}
    <h1>CustomerReview index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer_review in customer_reviews %}
            <tr>
                <td>{{ customer_review.id }}</td>
                <td>
                    <a href="{{ path('customer_review_show', {'id': customer_review.id}) }}">show</a>
                    <a href="{{ path('customer_review_edit', {'id': customer_review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_review_new') }}">Create new</a>
{% endblock %}
